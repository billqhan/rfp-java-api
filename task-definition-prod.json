{
  "family": "prod-java-api-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "2048",
  "memory": "4096",
  "runtimePlatform": {
    "cpuArchitecture": "X86_64",
    "operatingSystemFamily": "LINUX"
  },
  "executionRoleArn": "arn:aws:iam::160936122037:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::160936122037:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "java-api",
      "image": "160936122037.dkr.ecr.us-east-1.amazonaws.com/prod-rfp-java-api:latest",
      "portMappings": [
        {
          "containerPort": 8080,
          "protocol": "tcp",
          "appProtocol": "http"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "SPRING_PROFILES_ACTIVE",
          "value": "prod"
        },
        {
          "name": "RFP_API_AWS_REGION",
          "value": "us-east-1"
        },
        {
          "name": "RFP_API_AWS_ENVIRONMENT",
          "value": "prod"
        },
        {
          "name": "RFP_API_AWS_PROJECT_PREFIX",
          "value": "prod"
        },
        {
          "name": "JAVA_OPTS",
          "value": "-Xmx3072m -Xms2048m -XX:+UseG1GC"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/prod-java-api",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:8080/api/actuator/health || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}
